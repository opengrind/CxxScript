// Example .script file demonstrating the scripting language

// Calculate factorial using a for loop
int32 factorial(int32 n) {
    int32 result = 1;
    for (int32 i = 1; i <= n; i += 1) {
        result *= i;
    }
    return result;
}

// Check if a number is prime
bool isPrime(int32 n) {
    if (n <= 1) {
        return false;
    }
    
    for (int32 i = 2; i < n; i += 1) {
        if (n % i == 0) {
            return false;
        }
    }
    
    return true;
}

// Calculate sum of integers from 1 to n
int32 sumRange(int32 n) {
    int32 sum = 0;
    int32 i = 1;
    
    while (i <= n) {
        sum += i;
        i += 1;
    }
    
    return sum;
}

